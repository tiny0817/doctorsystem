<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping 
			PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="yl.hzc.po.Patient" table="tbl_patient"><!-- 每个class对应一个持久化对象 -->
		<id name="patientID" column="id"><!-- id元素用来定义主键标识,并指定主键生成策略 -->
			<generator class="native"></generator>
		</id>
		<property name="name" column="name"></property>
		<property name="age" column="age"></property>
		<property name="birthday" column="birthday"></property>
		<property name="sex" column="sex"></property>
		<property name="nation" column="nation"></property>
		<property name="job" column="job"></property>
		<property name="birPlace" column="birplace"></property>
		<property name="idCard" column="idcard"></property>
		<property name="homeAddr" column="homeaddr"></property>
		<property name="phoneNum" column="phonenum"></property>
		<property name="company" column="company"></property>
		<property name="linkName" column="linkname"></property>
		<property name="linkPhone" column="linkphone"></property>
		<property name="season" column="season"></property>
		<property name="isMarried" column="ismarried"></property>
	</class>	
</hibernate-mapping>